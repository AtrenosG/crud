//sql
CREATE DATABASE IF NOT EXISTS student_db;

USE student_db;

CREATE TABLE IF NOT EXISTS students (
    roll_no INT NOT NULL,
    name VARCHAR(100) NOT NULL,
    marks INT NOT NULL,
    PRIMARY KEY (roll_no)
) ENGINE = InnoDB;


//connect.php

<?php
$servername = "localhost";
$username = "root";
$password = "";
$dbname = "student_db";

$conn = mysqli_connect($servername, $username, $password, $dbname);
if (!$conn) {
    die("Connection failed: " . mysqli_connect_error());
}
?>


//create.php
<?php
include 'connect.php';

if (isset($_POST['submit'])) {
    $roll_no = $_POST['roll_no'];
    $name = $_POST['name'];
    $marks = $_POST['marks'];

    $sql = "INSERT INTO students (roll_no, name, marks) VALUES (?, ?, ?)";
    $stmt = mysqli_prepare($conn, $sql);

    if ($stmt) {
        mysqli_stmt_bind_param($stmt, "isi", $roll_no, $name, $marks);
        if (mysqli_stmt_execute($stmt)) {
            header("Location: display.php?msg=insert&highlight=$roll_no");
            exit;
        } else {
            echo "Insert error: " . mysqli_stmt_error($stmt);
        }
        mysqli_stmt_close($stmt);
    } else {
        echo "Prepare statement error: " . mysqli_error($conn);
    }
}
?>



//delete.php

<?php
include 'connect.php';

if (isset($_POST['submit'])) {
    $roll_no = $_POST['roll_no'];

    $sql = "DELETE FROM students WHERE roll_no = ?";
    $stmt = mysqli_prepare($conn, $sql);

    if ($stmt) {
        mysqli_stmt_bind_param($stmt, "i", $roll_no);
        if (mysqli_stmt_execute($stmt)) {
            if (mysqli_stmt_affected_rows($stmt) > 0) {
                header("Location: display.php?msg=delete");
                exit;
            } else {
                header("Location: display.php?msg=notfound");
                exit;
            }
        } else {
            echo "Delete error: " . mysqli_stmt_error($stmt);
        }
        mysqli_stmt_close($stmt);
    } else {
        echo "Prepare statement error: " . mysqli_error($conn);
    }
} else {
    header("Location: display.php");
    exit;
}
?>


//update.php

<?php
include 'connect.php';

if (isset($_POST['submit'])) {
    $roll_no = $_POST['roll_no'];
    $name = $_POST['name'];
    $marks = $_POST['marks'];

    $sql = "UPDATE students SET name=?, marks=? WHERE roll_no=?";
    $stmt = mysqli_prepare($conn, $sql);

    if ($stmt) {
        mysqli_stmt_bind_param($stmt, "sii", $name, $marks, $roll_no);
        if (mysqli_stmt_execute($stmt)) {
            header("Location: display.php?msg=update&highlight=$roll_no");
            exit;
        } else {
            echo "Update error: " . mysqli_stmt_error($stmt);
        }
        mysqli_stmt_close($stmt);
    } else {
        echo "Prepare statement error: " . mysqli_error($conn);
    }
}
?>


//display.php
<?php
include 'connect.php';

$highlighted_roll = isset($_GET['highlight']) ? $_GET['highlight'] : null;
$message = "";

if (isset($_GET['msg'])) {
    if ($_GET['msg'] == 'insert') $message = "Data has been <b>inserted</b>.";
    elseif ($_GET['msg'] == 'update') $message = "Data has been <b>updated</b>.";
    elseif ($_GET['msg'] == 'delete') $message = "Data has been <b>deleted</b>.";
    elseif ($_GET['msg'] == 'notfound') $message = "<span style='color: red;'>Roll No not found for deletion.</span>";
}
?>

<!DOCTYPE html>
<html>
<head>
    <title>Student Database Management</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            padding: 20px;
            background: #f7f7f7;
            text-align: center;
        }
        h1 {
            margin-bottom: 20px;
        }
        table {
            margin: 0 auto 30px;
            border-collapse: collapse;
            width: 80%;
        }
        table, th, td {
            border: 1px solid #aaa;
        }
        th, td {
            padding: 10px;
        }
        .form-row {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-top: 30px;
        }
        .form-box {
            background: white;
            border: 1px solid #ccc;
            padding: 20px;
            width: 280px;
            box-shadow: 0 0 5px rgba(0,0,0,0.1);
        }
        input[type="text"],
        input[type="number"] {
            width: 100%;
            padding: 6px;
            margin: 6px 0;
            box-sizing: border-box;
        }
        input[type="submit"] {
            padding: 8px 15px;
            cursor: pointer;
        }
        .success-message {
            color: green;
            font-weight: bold;
        }
        .error-message {
            color: red;
            font-weight: bold;
        }

        /* CSS to hide the up/down arrows for number inputs */
        /* For Webkit browsers (Chrome, Safari, Edge) */
        input[type="number"]::-webkit-outer-spin-button,
        input[type="number"]::-webkit-inner-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }

        /* For Firefox */
        input[type="number"] {
            -moz-appearance: textfield;
        }
    </style>
</head>
<body>

    <h1>Student Database Management</h1>

    <p class="success-message">Connection successful!</p>
    <?php if (!empty($message)) echo "<p class='success-message'>$message</p>"; ?>

    <?php
    $sql = "SELECT * FROM students";
    $result = mysqli_query($conn, $sql);

    if (mysqli_num_rows($result) > 0) {
        echo "<table>
                    <tr><th>Roll No</th><th>Name</th><th>Marks</th></tr>";
        while ($row = mysqli_fetch_assoc($result)) {
            $highlight = ($row['roll_no'] == $highlighted_roll) ? " style='background-color: #e0ffe0;'" : "";
            echo "<tr$highlight>
                        <td>{$row['roll_no']}</td>
                        <td>{$row['name']}</td>
                        <td>{$row['marks']}</td>
                    </tr>";
        }
        echo "</table>";
    } else {
        echo "<p>No student records found.</p>";
    }
    ?>

    <div class="form-row">
        <div class="form-box">
            <h3>Insert Student</h3>
            <form method="POST" action="create.php">
                <input type="number" name="roll_no" placeholder="Roll No" required><br>
                <input type="text" name="name" placeholder="Name" required><br>
                <input type="number" name="marks" placeholder="Marks" required><br>
                <input type="submit" name="submit" value="Insert">
            </form>
        </div>

        <div class="form-box">
            <h3>Delete Student</h3>
            <form method="POST" action="delete.php">
                <input type="number" name="roll_no" placeholder="Roll No to Delete" required><br>
                <input type="submit" name="submit" value="Delete">
            </form>
        </div>

        <div class="form-box">
            <h3>Update Student</h3>
            <form method="POST" action="update.php">
                <input type="number" name="roll_no" placeholder="Roll No to Update" required><br>
                <input type="text" name="name" placeholder="New Name" required><br>
                <input type="number" name="marks" placeholder="New Marks" required><br>
                <input type="submit" name="submit" value="Update">
            </form>
        </div>
    </div>

</body>
</html>
